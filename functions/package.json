{
  "name": "functions",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions,hosting",
    "serve:prod": "firebase use production && npm run build && firebase serve",
    "serve:stage": "firebase use staging && npm run build && firebase serve",
    "serve:test": "firebase serve --only firestore",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:production": "firebase use production && firebase deploy",
    "deploy:stage": "firebase use staging && firebase deploy",
    "deploy": "firebase deploy --only functions,hosting",
    "deploy:stage:rules": "firebase use staging && firebase deploy --only firestore:rules",
    "deploy:test:rules": "firebase use user-test && firebase deploy --only firestore:rules",
    "logs": "firebase functions:log",
    "mocha": "mocha --exit --timeout 5000",
    "build:test": "tsc -p test --outDir ./test",
    "test": "tsc -p test --outDir ./test && mocha --exit --timeout 10000 || true",
    "test:unit": "tsc -p test --outDir ./test && mocha --exit --timeout 10000 --grep Unit_Test || true",
    "test:rules": "tsc -p test --outDir ./test && mocha --exit --timeout 10000 --grep Emulated_Rules || true",
    "test:integration": "tsc -p test --outDir ./test && mocha --exit --timeout 10000 --grep Integration_Test || true",
    "test:report:rules": "tsc -p test --outDir ./test && mocha --exit --timeout 10000 --grep Emulated_Rules 2>&1 | tee ./../rules.description.txt",
    "test:coverage": "tsc -p test --outDir ./test && nyc mocha --exit --timeout 10000"
  },
  "nyc": {
    "include": [
      "test/**/*",
      "lib/**/*"
    ],
    "exclude": [
      "test/test",
      "test/helpers/",
      "test/stubs/",
      "test/**.test.js",
      "src/server/lib/**/*"
    ],
    "reporter": [
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "main": "lib/index.js",
  "dependencies": {
    "@firebase/app": "^0.3.4",
    "@firebase/firestore": "^0.8.2",
    "@google-cloud/iot": "^0.2.1",
    "@google-cloud/pubsub": "^0.22.2",
    "@nuxtjs/vuetify": "^0.5.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "camelcase": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "express-validator": "^5.3.1",
    "firebase": "^5.5.2",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "flat": "^4.1.0",
    "glob": "^7.1.3",
    "http-status-codes": "^1.3.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "loglevel": "^1.6.1",
    "moment": "^2.23.0",
    "nodejs-base64": "^1.0.3",
    "nuxt": "^2.3.4",
    "nuxt-validate": "^0.1.2",
    "pluralize": "^7.0.0",
    "pug": "^2.0.3",
    "randomstring": "^1.1.5",
    "supertest": "^4.0.2",
    "uuid": "^3.3.2",
    "vuetify-loader": "^1.1.1",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "@firebase/auth-types": "^0.3.4",
    "@firebase/testing": "^0.3.1",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.5",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-things": "0.0.33",
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.5",
    "@types/google-cloud__pubsub": "^0.18.1",
    "@types/mocha": "^5.2.5",
    "@types/pluralize": "0.0.29",
    "@types/sinon": "^5.0.2",
    "@types/supertest": "^2.0.7",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "faker": "^4.1.0",
    "firebase-functions-test": "^0.1.3",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "sinon": "^6.3.5",
    "tslint": "~5.8.0",
    "typescript": "~2.8.3",
    "uniqid": "^5.0.3"
  },
  "private": true
}
