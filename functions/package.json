{
  "name": "functions",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions,hosting",
    "serve:prod": "firebase use production && npm run build && firebase serve",
    "serve:stage": "firebase use staging && npm run build && firebase serve",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:prod": "firebase use production && firebase deploy",
    "deploy:stage": "firebase use staging && firebase deploy",
    "deploy": "firebase deploy --only functions,hosting",
    "logs": "firebase functions:log",
    "test": "tsc -p test --outDir ./test && mocha --grep",
    "test:online": "tsc -p test --outDir ./test && mocha --grep ONLINE",
    "test:offline": "tsc -p test --outDir ./test && mocha --grep OFFLINE"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/express": "^4.16.0",
    "express": "^4.16.3",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "firebase-functions-test": "^0.1.3",
    "mocha": "^5.2.0",
    "sinon": "^6.3.4",
    "tslint": "~5.8.0",
    "typescript": "~2.8.3"
  },
  "private": true
}
