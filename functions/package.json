{
  "name": "functions",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions,hosting",
    "serve:prod": "firebase use production && npm run build && firebase serve",
    "serve:stage": "firebase use staging && npm run build && firebase serve",
    "serve:test": "firebase serve --only firestore",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:prod": "firebase use production && firebase deploy",
    "deploy:stage": "firebase use staging && firebase deploy",
    "deploy": "firebase deploy --only functions,hosting",
    "deploy:stage:rules": "firebase use staging && firebase deploy --only firestore:rules",
    "logs": "firebase functions:log",
    "test": "tsc -p test --outDir ./test && mocha --exit --timeout 5000 || true",
    "test:stage": "tsc -p test --outDir ./test && mocha --exit --timeout 5000 --grep STAGE || true",
    "test:integration": "tsc -p test --outDir ./test && mocha --exit --timeout 5000 --grep Integration_Test || true",
    "test:offline": "tsc -p test --outDir ./test && mocha --exit --timeout 5000 --grep OFFLINE || true",
    "test:report:rules": "tsc -p test --outDir ./test && mocha --exit --timeout 5000 --grep Emulated_Rules 2>&1 | tee ./../rules.description.txt",
    "test:coverage": "tsc -p test --outDir ./test && nyc --reporter=html --reporter=text mocha --exit --timeout 5000 || true",
    "test:test": "nyc mocha --exit --timeout 5000 || true"
  },
  "nyc": {
    "include": [
      "test/**/*",
      "lib/auth/**",
      "lib/ctrl/**"
    ],
    "exclude": [
      "coverage/",
      "test/**.test.js"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "main": "lib/index.js",
  "dependencies": {
    "@firebase/app": "^0.3.4",
    "@firebase/firestore": "^0.8.2",
    "axios": "^0.18.0",
    "camelcase": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "firebase": "^5.5.2",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "flat": "^4.1.0",
    "glob": "^7.1.3",
    "lodash": "^4.17.11",
    "nyc": "^13.1.0",
    "pluralize": "^7.0.0",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "@firebase/auth-types": "^0.3.4",
    "@firebase/testing": "^0.3.1",
    "@types/chai": "^4.1.5",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-things": "0.0.33",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/pluralize": "0.0.29",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "firebase-functions-test": "^0.1.3",
    "mocha": "^5.2.0",
    "sinon": "^6.3.4",
    "tslint": "~5.8.0",
    "typescript": "~2.8.3",
    "uniqid": "^5.0.3"
  },
  "private": true
}
